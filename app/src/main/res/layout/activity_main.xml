<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="end"
        android:maxWidth="200dp"
        android:maxLines="1"
        android:padding="40dp"
        android:singleLine="true"
        android:text="0"
        android:textSize="65sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonLayout"
        />
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/resultTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Button 1 -->

        <!-- Button 2 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/FunctionButtonClear"
            android:layout_width="100dp"
            android:background="@drawable/button_background"
            android:layout_height="100dp"
            android:text="C"
            android:textColor="#FF0000"
            android:textSize="32sp" />

        <!-- Button 3 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/operatorButtonPercentage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_background"
            android:textColor="#ffff"
            android:text="%"
            android:textSize="32sp" />

        <!-- Button 4 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/functionButtonDelete"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="DEL"
            android:background="@drawable/button_background"
            android:textColor="#ffff"
            android:textSize="28sp" />

        <!-- Button 5 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/operatorButtonDivision"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_background"
            android:textColor="#ffff"
            android:text="/"
            android:textSize="28sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Button 1 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/numericButton7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="7"
            android:background="@drawable/button_background"
            android:textColor="#ffff"
            android:textSize="32sp" />

        <!-- Button 2 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/numericButton8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="8"
            android:textSize="32sp"
            android:background="@drawable/button_background"
            android:textColor="#ffff"
            />

        <!-- Button 3 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/numericButton9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="9"
            android:textSize="32sp"
            android:background="@drawable/button_background"
            android:textColor="#ffff"
            />

        <!-- Button 4 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/operatorButtonMultiply"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="x"
            android:textSize="28sp"
            android:background="@drawable/button_background"
            android:textColor="#ffff"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Button 1 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/numericButton4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="4"
            android:textSize="32sp"
            android:background="@drawable/button_background"
            android:textColor="#ffff"
            />

        <!-- Button 2 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/numericButton5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="5"
            android:textSize="32sp"
            android:background="@drawable/button_background"
            android:textColor="#ffff"
            />

        <!-- Button 3 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/numericButton6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="6"
            android:textSize="32sp" android:background="@drawable/button_background"
            android:textColor="#ffff"
            />

        <!-- Button 4 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/operatorButtonMinus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="__"
            android:textSize="29sp"
            android:background="@drawable/button_background"
            android:textColor="#ffff"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonLayout3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Button 1 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/numericButton1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="1"
            android:textSize="32sp"
            android:background="@drawable/button_background"
            android:textColor="#ffff"
            />

        <!-- Button 2 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/numericButton2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="2"
            android:textSize="32sp" android:background="@drawable/button_background"
            android:textColor="#ffff"
            />

        <!-- Button 3 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/numericButton3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="3"
            android:textSize="32sp" android:background="@drawable/button_background"
            android:textColor="#ffff"
            />

        <!-- Button 4 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/operatorButtonPlus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="+"
            android:textSize="32sp"
            android:background="@drawable/button_background"
            android:textColor="#ffff"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonLayout4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Button 1 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/numericButton00"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="00"
            android:textSize="32sp"
            android:background="@drawable/button_background"
            android:textColor="#ffff"
            />

        <!-- Button 2 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/numericButton0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="0"
            android:textSize="32sp"
            android:background="@drawable/button_background"
            android:textColor="#ffff"
            />

        <!-- Button 3 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/functionalButtonDecimal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="."
            android:textSize="32sp"
            android:background="@drawable/button_background"
            android:textColor="#ffff"
            />

        <!-- Button 4 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/arithmeticButtonEquals"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="="
            android:textSize="32sp"
            android:background="@drawable/button_background"
            android:textColor="#ffff"
            />

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>
